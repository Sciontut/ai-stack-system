{
  "design_to_code": {
    "id": "design-to-code",
    "name": "Design to Code Pipeline",
    "description": "Transform Figma designs into production React components",
    "trigger": "manual",
    "steps": [
      {
        "step": 1,
        "agent": "Figma",
        "action": "export_design_tokens",
        "output": "design-tokens.json"
      },
      {
        "step": 2,
        "agent": "Claude",
        "action": "generate_components",
        "input": "design-tokens.json",
        "context": "prompts/design.txt",
        "output_format": "TSX"
      },
      {
        "step": 3,
        "agent": "Bug Bot",
        "action": "review_pr",
        "checks": ["accessibility", "security", "performance"]
      },
      {
        "step": 4,
        "agent": "Human",
        "action": "final_review"
      }
    ]
  },
  "secure_feature": {
    "id": "secure-feature",
    "name": "Secure Feature Development",
    "description": "Full-stack feature with security at every stage",
    "trigger": "manual",
    "steps": [
      {
        "step": 1,
        "agent": "Claude",
        "action": "generate_schema",
        "context": "prompts/security.txt",
        "output_format": "SQL",
        "includes": ["RLS policies"]
      },
      {
        "step": 2,
        "agent": "Claude",
        "action": "generate_api",
        "output_format": "TypeScript",
        "includes": ["input validation", "error handling"]
      },
      {
        "step": 3,
        "agent": "Claude",
        "action": "generate_frontend",
        "context": "prompts/frontend.txt",
        "output_format": "TSX"
      },
      {
        "step": 4,
        "agent": "Bug Bot",
        "action": "security_review",
        "checks": ["sql_injection", "xss", "auth_bypass"]
      }
    ]
  },
  "quick_prototype": {
    "id": "quick-prototype",
    "name": "Quick Prototype",
    "description": "Rapid MVP development for hackathons",
    "trigger": "manual",
    "mood": "fire",
    "steps": [
      {
        "step": 1,
        "agent": "Claude",
        "action": "scaffold_project",
        "output": "Project structure + core files"
      },
      {
        "step": 2,
        "agent": "Claude",
        "action": "generate_ui",
        "output_format": "TSX",
        "style": "functional over perfect"
      },
      {
        "step": 3,
        "agent": "Claude",
        "action": "connect_backend",
        "output": "Supabase integration"
      }
    ]
  },
  "polish_and_ship": {
    "id": "polish-ship",
    "name": "Polish and Ship",
    "description": "Final polish before deployment",
    "trigger": "manual",
    "mood": "flow",
    "steps": [
      {
        "step": 1,
        "agent": "Claude",
        "action": "audit_accessibility",
        "output": "a11y report"
      },
      {
        "step": 2,
        "agent": "Claude",
        "action": "optimize_performance",
        "checks": ["bundle size", "lazy loading", "image optimization"]
      },
      {
        "step": 3,
        "agent": "Claude",
        "action": "add_seo",
        "output": "meta tags, OG images, sitemap"
      },
      {
        "step": 4,
        "agent": "Bug Bot",
        "action": "final_review"
      }
    ]
  }
}
